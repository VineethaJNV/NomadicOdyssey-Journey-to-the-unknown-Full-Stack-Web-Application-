<%=layout("/layout/boilerplate")%>


<div class="row mt-3">
    <h1  class="col-6 offset-3">Login on NomadicOdyssey</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" id="username" class="form-control" type="text" required>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input name="password" id="password" class="form-control" type="password" required>
            </div>
            <button class="btn btn-success">LogIn</button>
        </form>
    </div>
</div>